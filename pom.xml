<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <artifactId>JAXBSchemas-common</artifactId>
        <groupId>se.omegapoint.xml.jaxb</groupId>
        <version>1.0.3</version>
    </parent>

    <artifactId>JAXBSchemas-xenc</artifactId>
    <version>1.0.0</version>
    <packaging>jar</packaging>

    <scm>
        <developerConnection>scm:git:git@github.com:Omegapoint/${project.artifactId}.git</developerConnection>
        <tag>1.0.0</tag>
    </scm>

    <properties>
        <schema.name>xenc</schema.name>
        <schema.path>META-INF/schema/w3c</schema.path>
    </properties>

    <repositories>
        <repository>
            <id>omegapoint-nexus</id>
            <name>Sonatype nexus on localhost mirror of central</name>
            <url>http://localhost:9091/nexus/content/groups/public</url>
        </repository>
    </repositories>

    <pluginRepositories>
        <pluginRepository>
            <id>omegapoint-nexus</id>
            <name>Sonatype nexus on localhost mirror of central</name>
            <url>http://localhost:9091/nexus/content/groups/public</url>
        </pluginRepository>
    </pluginRepositories>

    <dependencies>
        <dependency>
            <groupId>se.omegapoint.xml.jaxb</groupId>
            <artifactId>JAXBSchemas-util</artifactId>
            <version>1.0.2</version>
        </dependency>
        <dependency>
            <groupId>se.omegapoint.xml.jaxb</groupId>
            <artifactId>JAXBSchemas-xmldsig</artifactId>
            <version>1.0.0</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <!-- Extracts the dependencies needed for this schema -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>unpack-depend-schemas</id>
                        <phase>initialize</phase>
                        <goals>
                            <goal>unpack</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>se.omegapoint.xml.jaxb</groupId>
                                    <artifactId>JAXBSchemas-xmldsig</artifactId>
                                    <outputDirectory>src/main/resources</outputDirectory>
                                    <includes>META-INF/schema/w3c/xmldsig-episode.xjb,META-INF/schema/w3c/xmldsig-core-schema.xsd</includes>
                                </artifactItem>
                            </artifactItems>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.jvnet.jaxb2.maven2</groupId>
                <artifactId>maven-jaxb2-plugin</artifactId>
                <configuration>
                    <catalog>src/main/resources/META-INF/schema/w3c/xenc-schemas.cat</catalog>
                    <schemaExcludes><schemaExclude>xmldsig-core-schema.xsd</schemaExclude></schemaExcludes>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
